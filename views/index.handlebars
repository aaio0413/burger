<div class='burger-contents-wrapper'>

    <ul>
    {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block edible=true}}
        {{/unless}}
    {{/each}}
    </ul>

    <ul>
    {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block edible=false}}
        {{/if}}
    {{/each}}
    </ul>

</div>
